server {
    listen 80;
    listen [::]:80;

    server_name {{domain_name}} www.{{domain_name}};
    return 301 https://$server_name$request_uri;

}

server {

    # SSL configuration

    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    include snippets/ssl-{{domain_name}}.conf;
    include snippets/ssl-params.conf;

    root /var/www/{{domain_name}};


}